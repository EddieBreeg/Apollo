{
	"version": 8,
	"configurePresets": [
		{
			"name": "_default",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"BUILD_SHARED_LIBS": "OFF",
				"SDL_SHARED": "ON",
				"SDL_STATIC": "OFF",
				"SDL_AUDIO": "OFF",
				"SDL_CAMERA": "OFF",
				"SDL_DISKAUDIO": "OFF",
				"SDL_DUMMYAUDIO": "OFF",
				"SDL_DUMMYCAMERA": "OFF",
				"SDL_HIDAPI_LIBUSB_SHARED": "OFF",
				"SDL_OPENGL": "OFF",
				"SDL_OPENGLES": "OFF",
				"SDL_RENDER": "OFF",
				"SPIRV_REFLECT_STATIC_LIB": "ON",
				"SPIRV_REFLECT_INSTALL": "OFF",
				"MSDFGEN_CORE_ONLY": "ON",
				"MSDFGEN_DYNAMIC_RUNTIME": "ON",
				"MSDFGEN_DISABLE_SVG": "ON",
				"MSDFGEN_DISABLE_PNG": "ON",
				"MSDFGEN_USE_SKIA": "OFF",
				"MSDFGEN_USE_VCPKG": "OFF",
				"FT_ENABLE_ERROR_STRINGS": "ON",
				"ASSIMP_INSTALL": "OFF",
				"ASSIMP_BUILD_TESTS": "OFF"
			},
			"environment": {
				"FREETYPE_DIR": "${sourceDir}/build/install"
			}
		},
		{
			"name": "MSVC",
			"inherits": "_default",
			"generator": "Visual Studio 17 2022",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "Ninja",
			"generator": "Ninja Multi-Config",
			"inherits": "_default",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "1"
			}
		}
	],
	"buildPresets": [
		{
			"name": "msvc_debug",
			"configuration": "Debug",
			"configurePreset": "MSVC"
		},
		{
			"name": "msvc_debugOpt",
			"configuration": "RelWithDebInfo",
			"configurePreset": "MSVC"
		},
		{
			"name": "msvc_release",
			"configuration": "Release",
			"configurePreset": "MSVC"
		},
		{
			"name": "ninja_debug",
			"configuration": "Debug",
			"configurePreset": "Ninja"
		},
		{
			"name": "ninja_debugOpt",
			"configuration": "RelWithDebInfo",
			"configurePreset": "Ninja"
		},
		{
			"name": "ninja_release",
			"configuration": "Release",
			"configurePreset": "Ninja"
		}
	],
	"workflowPresets": [
		{
			"name": "msvc_debug",
			"description": "Configures and builds the project on Windows using MSVC in Debug mode",
			"steps": [
				{
					"type": "configure",
					"name": "MSVC"
				},
				{
					"type": "build",
					"name": "msvc_debug"
				}
			]
		},
		{
			"name": "ninja_debug",
			"description": "Configures and builds the project using Ninja Multi-Config in Debug mode",
			"steps": [
				{
					"type": "configure",
					"name": "Ninja"
				},
				{
					"type": "build",
					"name": "ninja_debug"
				}
			]
		}
	]
}
