{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "/schema/scene",
	"title": "scene",
	"description": "Describes a scene asset",
	"type": "object",
	"properties": {
		"gameObjects": {
			"type": "array",
			"description": "The objects in the scene",
			"items": {
				"type": "object",
				"description": "A Game Object is a named entity, with components attached to it",
				"properties": {
					"id": {
						"type": "string",
						"pattern": "[0123456789ABCDEFGHJKMNPQRSTVWXYZ]{26}"
					},
					"name": {
						"type": "string",
						"minLength": 1
					},
					"components": {
						"type": "array",
						"items": {
							"type": "object"
						}
					}
				},
				"required": ["id", "components", "name"]
			}
		}
	}
}